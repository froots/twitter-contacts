guard 'coffeescript', :output => 'extension/scripts/models' do
	watch /^src\/coffeescript\/models\/.*[.]coffee/
end

guard 'coffeescript', :output => 'extension/scripts/collections' do
	watch /^src\/coffeescript\/collections\/.*[.]coffee/
end

guard 'coffeescript', :output => 'extension/scripts/views' do
	watch /^src\/coffeescript\/views\/.*[.]coffee/
end

guard 'coffeescript', :output => 'spec/javascripts' do
	watch /^spec\/coffeescript\/.*[.]coffee/
end

guard 'sass', :input => 'src/styles', :output => 'extension/styles'